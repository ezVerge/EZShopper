{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",
      // Regex for Component Factory to use,
      // default to "createReactClass"
      "pragma": "React",
      // Pragma to use, default to "React"
      "version": "16.0",
      // React version, default to the latest React stable release
      "flowVersion": "0.53"
      // Flow version
    }
  },
  "env": {
    "browser": true,
    "node": false,
    "es6": true,
    "commonjs": true
  },
  "globals": {
    "moment": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "no-console": 0,
    // remove when dev bench deepens, create new process/gulp task to run and 'check' before each merge
    "no-empty": [
      2,
      {
        "allowEmptyCatch": true
      }
    ],
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": 2,
    "no-multi-spaces": 2,
    "one-var": [
      2,
      "never"
    ],
    "no-nested-ternary": 2,
    "key-spacing": [
      2,
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "space-unary-ops": [
      2,
      {
        "words": false,
        "nonwords": false
      }
    ],
    "comma-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "semi-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "no-spaced-func": 2,
    "space-before-function-paren": [
      2,
      {
        "anonymous": "ignore",
        "named": "never"
      }
    ],
    "array-bracket-spacing": [
      2,
      "never",
      {
        "singleValue": false,
        "objectsInArrays": false,
        "arraysInArrays": false
      }
    ],
    "space-in-parens": [
      2,
      "never"
    ],
    "indent": [
      2,
      4,
      {
        "VariableDeclarator": 1,
        "flatTernaryExpressions": true,
        "SwitchCase": 1,
        "MemberExpression": 1,
        "ArrayExpression": "first",
        "ObjectExpression": "first",
        "CallExpression": {
          "arguments": "first"
        },
        "FunctionExpression": {
          "parameters": "first"
        }
      }
    ],
    "comma-dangle": [
      2,
      "never"
    ],
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "none",
        "varsIgnorePattern": "[_self|theme|classes|children|tag|Tag]"
      }
    ],
    "no-var": 2,
    "yoda": [
      2,
      "never"
    ],
    "valid-jsdoc": [
      0,
      {
        "matchDescription": ".+",
        "requireReturn": false
      }
    ],
    "comma-style": [
      2,
      "last"
    ],
    "curly": [
      2,
      "all"
    ],
    "brace-style": [
      2,
      "stroustrup",
      {
        "allowSingleLine": true
      }
    ],
    "eol-last": 2,
    "operator-linebreak": [
      2,
      "after"
    ],
    "semi": [
      2,
      "always"
    ],
    "space-infix-ops": 2,
    "keyword-spacing": [
      2,
      {
        "overrides": {
          "else": {
            "before": true
          },
          "while": {
            "before": true
          },
          "catch": {
            "before": true
          }
        }
      }
    ],
    "spaced-comment": [
      0,
      "always",
      {
        "markers": [
          "/",
          "/*",
          "{/*"
        ]
      }
    ],
    "strict": [
      2,
      "global"
    ],
    "consistent-this": [
      2,
      "that",
      "_self"
    ],
//    "linebreak-style": [
//      2,
//      "unix"
//    ],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "react/no-string-refs": 2,
    "react/boolean-prop-naming": 2,
    "react/no-unused-state": 2,
    "react/prefer-es6-class": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-no-duplicate-props": 2,
    "react/no-deprecated": 0,
    "react/button-has-type": 2,
    "react/default-props-match-prop-types": 2,
    "react/no-did-update-set-state": 2,
    "react/no-is-mounted": 2,
    "react/no-this-in-sfc": 2,
    "react/no-will-update-set-state": 2,
    "react/void-dom-elements-no-children": 2
  }
}
